<?xml version="1.0" encoding="utf-8"?>
<!-- Fullscreen graph with settings gear; adjusted margins for round watch screens -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <!-- Graph fills most of the screen but leaves breathing room top/bottom/sides -->
    <HRPeripheral.Views.HrGraphView
        android:id="@+id/hr_graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <!-- Hold-to-exit countdown ring -->
    <hrperipheral.views.HoldCountdownView
        android:id="@+id/holdCountdown"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <!-- Touch overlay for long press to exit -->
    <View
        android:id="@+id/exitHoldOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false" />

    <!-- Settings gear button (on top) -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="12dp"
        android:background="@android:color/transparent"
        android:contentDescription="Settings"
        android:src="@drawable/ic_settings_gear"
        android:padding="4dp"
        android:scaleType="centerInside"
        android:elevation="8dp" />

</FrameLayout>